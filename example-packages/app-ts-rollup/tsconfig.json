{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
